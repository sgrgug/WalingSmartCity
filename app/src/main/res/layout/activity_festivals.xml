<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/relativeLayoutFestival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewFestival"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/dashain"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textViewTitleFestival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Holi"
                android:paddingLeft="8dp"
                android:background="@color/deeppurple"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/imageViewFestival"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_below="@+id/textViewTitleFestival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/relativeLayout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dashain Festival in Nepal, also known as Vijaya Dashami is the biggest and longest festival celebrated by Hindu Origin Nepalese all over the world."
                        android:textSize="14dp"
                        android:textStyle="italic" />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/relativeLayoutFestival1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewFestival1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/tihar"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textViewTitleFestival1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tihar"
                android:paddingLeft="8dp"
                android:background="@color/deeppurple"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/imageViewFestival1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_below="@+id/textViewTitleFestival1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/relativeLayout1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewDesc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="After celebrating the main festival “Dashain” in Nepal, the Tihar festival is the second main festival of Nepal which is also called the “Light Festival”. In this festival, people sing, dance, do fireworks, and enjoy with their families. "
                        android:textSize="14dp"
                        android:textStyle="italic" />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/relativeLayoutFestival2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewFestival2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/holi"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textViewTitleFestival2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tihar"
                android:paddingLeft="8dp"
                android:background="@color/deeppurple"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/imageViewFestival2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_below="@+id/textViewTitleFestival2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/relativeLayout2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewDesc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Holi Festival (or festival of colors) is a fascinating cultural and religious celebration that encompasses much more than just throwing colored dye in the air. "
                        android:textSize="14dp"
                        android:textStyle="italic" />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
</ScrollView>